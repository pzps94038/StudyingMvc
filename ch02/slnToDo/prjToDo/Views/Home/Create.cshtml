@model prjToDo.Models.tToDo

@{
    ViewBag.Title = "待辦事項新增";
}

    <h2>待辦事項新增</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label class="control-label col-md-2">標題</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.fTitle, new { htmlAttributes = new { @class = "form-control", required="required" } })
                @Html.ValidationMessageFor(model => model.fTitle, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">重要層級</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.fLevel, new { htmlAttributes = new { @class = "form-control",  required="required" } })
                @Html.ValidationMessageFor(model => model.fLevel, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">結案日期</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.fDate, new { htmlAttributes = new { @class = "form-control" , type="date", required="required" } })
                @Html.ValidationMessageFor(model => model.fDate, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="新增" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("返回待辦事項列表", "Index")
</div>

<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
